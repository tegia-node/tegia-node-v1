#!/bin/bash

set -e
. /usr/share/debconf/confmodule

RED=`tput setaf 1`
GREEN=`tput setaf 2`
RESET=`tput sgr0`

echo "${RED}prerm [$1] [$2] [$3]${RESET}"


case "$1" in
    remove)
    # -----------------------------------------------------------------------------

    

    # -----------------------------------------------------------------------------
    ;;

    purge)
    # -----------------------------------------------------------------------------

    

    # -----------------------------------------------------------------------------
    ;;

    upgrade)
    # -----------------------------------------------------------------------------

    

    # -----------------------------------------------------------------------------
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    # -----------------------------------------------------------------------------


    # -----------------------------------------------------------------------------
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac


if [ -d "/var/tegia/test_repo" ]
then
    rm -rf /var/tegia/test_repo
fi


exit 0