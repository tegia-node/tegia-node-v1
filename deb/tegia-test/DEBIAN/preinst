GREEN=`tput setaf 2`
RESET=`tput sgr0`

echo "${RED}preinst [$1] [$2] [$3]${RESET}"


case "$1" in
    install)
    # -----------------------------------------------------------------------------

    

    # -----------------------------------------------------------------------------
    ;;

    upgrade)
    # -----------------------------------------------------------------------------

    

    # -----------------------------------------------------------------------------
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    # -----------------------------------------------------------------------------


    # -----------------------------------------------------------------------------
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac


exit 0